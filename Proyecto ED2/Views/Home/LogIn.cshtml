
@{
	ViewBag.Title = "LogIn";
}

@if (TempData["msm"] != null)
{
	<script type="text/javascript">
       alert("@TempData["msm"]");
	</script>
}

<head>
	<link href="~/Content/PantallaDividida.css" rel="stylesheet" />
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("CHAT", "LogIn", "Home", new { area = "" }, new { @class = "navbar-brand" })
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li>@Html.ActionLink("Sign In", "SignIn", "Home")</li>
				</ul>
			</div>
		</div>
	</div>

	<div class="row" no-gutters>
		<div class="col-md-6" no-gutters>
			<div class="leftside" no-gutters>
				<br />
				<br />
				<form method="post">
					<div class="container">
						<div class="row">
							<div class="col-md-4 col-md-offset-1">
								<div class="login-panel panel panel-default">
									<div class="panel-heading">
										<h3 class="panel-title">Log In</h3>
									</div>
									<div class="panel-body">
										<fieldset>
											<div class="form-group">
												<input class="form-control" placeholder="Usuario" name="user" type="text" autofocus id="txtUsuario">
											</div>
											<div class="form-group">
												<input class="form-control" placeholder="Password" name="password" type="password" id="txtPassword">
											</div>
											<button id="btnIngresar" class="btn btn-lg btn-success btn-block" type="submit">Ingresar</button>
										</fieldset>
									</div>
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
		<div class="col-md-6">
			<div class="rightside" aling="center" no-gutters>
				<br />
				<center>
					<img src="@Url.Content("~/Archivos/Logo3.png")" />
				</center>
			</div>
		</div>
	</div>
</body>